<header class="page-header">
  <h1>Admin &raquo; All Categories</h1>
</header>

<div class="well">
  <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
</div>

<section class="categories-show">

  <table class="table table-bordered">
    <thead>
      <th>Category</th>
      <th>Quantity</th>
    </thead>
    
    <tbody>
      <%= render @categories %>
    </tbody>
  </table>

</section>
